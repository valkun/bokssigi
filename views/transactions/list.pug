extends ../base.pug

block content
  h3 Transactions

  a(href="/transactions/add", class='btn btn-success btn-sm')
    i.glyphicon.glyphicon-plus
    span  Add Transaction

  table(class='table table-sm')
    each transaction in transactions      
      tr
      .media
        .media-body
          td(scope="row")= transaction.title
          td= transaction.author

  if !transactions.length
    p No transactions found.

  if nextPageToken
    nav
      ul.pager
        li
          a(href=`?pageToken=${encodeURIComponent(nextPageToken)}`) More
